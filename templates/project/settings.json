{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "npx prettier --write \"$filepath\" 2>/dev/null || true"
          },
          {
            "type": "command",
            "command": "npx eslint --fix \"$filepath\" 2>/dev/null || true"
          }
        ]
      }
    ]
  }
}
